<!-- add_event.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Event</title>
  <!-- Include Bootstrap CSS -->
  <link rel="stylesheet" href="<%= bootstrap.css %>">
  <!-- Include your custom CSS -->
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="/">Event Management</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link" href="/events">Events</a>
          </li>
          <% if (!userId) { %>
            <li class="nav-item">
              <a class="nav-link" href="/login">Login</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/register">Register</a>
            </li>
          <% } else { %>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li>
          <% } %>
        </ul>
      </div>
    </nav>
  </header>
  <main class="container mt-4">
    <h1 class="mb-4">Add Event</h1>
    <form action="/events/add" method="POST">
      <div class="form-group">
        <label for="title">Event Title</label>
        <input type="text" class="form-control" id="title" name="title" placeholder="Event Title" required>
      </div>
      <div class="form-group">
        <label for="description">Event Description</label>
        <textarea class="form-control" id="description" name="description" placeholder="Event Description" required></textarea>
      </div>
      <div class="form-group">
        <label for="date">Event Date</label>
        <input type="date" class="form-control" id="date" name="date" required>
      </div>
      <div class="form-group">
        <label for="time">Event Time</label>
        <input type="time" class="form-control" id="time" name="time" required>
      </div>
      <div class="form-group">
        <label for="location">Event Location</label>
        <input type="text" class="form-control" id="location" name="location" placeholder="Event Location" required>
      </div>
      <div class="form-group">
        <label for="category">Event Category</label>
        <input type="text" class="form-control" id="category" name="category" placeholder="Event Category" required>
      </div>
      <button type="submit" class="btn btn-primary">Add Event</button>
    </form>
  </main>
  <footer class="mt-4">
    <div class="container text-center">
      <p>&copy; 2024 Event Management</p>
    </div>
  </footer>

  <!-- Include Bootstrap JS and dependencies -->
  <script src="<%= bootstrap.jquery %>"></script>
  <script src="<%= bootstrap.popper %>"></script>
  <script src="<%= bootstrap.js %>"></script>
</body>
</html>
